{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "target": "es2017",
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*", "*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
